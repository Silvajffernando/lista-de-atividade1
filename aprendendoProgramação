package Exercc.java 4;
import java.util.*; 
public class exercc {

	public static void main(String[] args) {
		
		double valor, valorNovo;
		
		 
		 Scanner entrada; 
		 entrada = new Scanner(System.in);
		 System.out.println("Digite o valor:");
		 valorNovo = entrada.nextDouble();
		 valor = valorNovo;
		 	 

		 System.out.println("Valor:" + (valor + valorNovo * (15.8/100)));
		 
		 
		 
	 }
	}
