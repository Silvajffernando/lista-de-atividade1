  package Exercc.java;
import java.util.*; 
public class exercc {

	public static void main(String[] args) {
		final double valor_horas=32.00;
  		String  nomeDoFuncionario;
  		double horas;
  		int dependente; 
  		
  		
	  	//Entradas de dados
  		Scanner teclado = new Scanner(System.in);
  		
  		System.out.println("Digite o nome:");
  		nomeDoFuncionario = teclado.next();
  		
  		System.out.println("Digite a hora:");
  		horas = teclado.nextDouble();
  		
  		System.out.println("numeroFuncionario:");
  		dependente = teclado.nextInt();
  		
  		double salarioBruto =horas *32 + dependente * 40;
  		double valorINSS = salarioBruto * 8.5 / 100;
  		double valorIR = salarioBruto * 5/100;
  		double salarioLiquido = salarioBruto * 5 / 100;
  		
  		
  		System.out.println("Nome :" + nomeDoFuncionario);
  		System.out.println("Bruto:" + salarioBruto);
  		System.out.println("INSS:" + valorINSS);
  		System.out.println("IR:" + valorIR);
  		System.out.println("Líquido:" + salarioLiquido);
  		
  		
	}
	}
